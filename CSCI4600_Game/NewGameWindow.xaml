<Window x:Class="CSCI4600_Game.NewGameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CSCI4600_Game"
        mc:Ignorable="d"
        Title="New Game" Height="auto" Width="auto">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <!-- First row, first column -->
        <TextBlock Grid.Row="0" Grid.Column="0" Text="Select a Character:" Margin="10" />
        <Image Source="\Resources\characterImage_Boy.png" Grid.Row="1" Grid.Column="0" Width="75" Height="75" Margin="10" MouseDown="setCharacterBoy" />
        <Image Source="\Resources\characterImage_Girl.png" Grid.Row="1" Grid.Column="1" Width="75" Height="75" Margin="10" MouseDown="setCharacterGirl" />
        <Image Source="\Resources\characterImage_Puppers.png" Grid.Row="1" Grid.Column="2" Width="75" Height="75" Margin="10" MouseDown="setCharacterPuppers" />
        <Image Source="\Resources\characterImage_Robot.png" Grid.Row="1" Grid.Column="3" Width="75" Height="75" Margin="10" MouseDown="setCharacterRobot"/>

     
        

        <!-- Second row, first column -->
        <TextBlock Grid.Row="2" Grid.Column="0" Text="Choose a Character Name:" Margin="10" />
        <TextBox Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" x:Name="characterName" Margin="10"/>
        <Button Grid.Row="3" Grid.Column="1" Content="Submit" Height="23" HorizontalAlignment="Left" Margin="20" Name="submitButton" VerticalAlignment="Top" Width="70" Click="Submit_Click" />
        <Button Grid.Row="3" Grid.Column="2" Content="Cancel" Height="23" HorizontalAlignment="Left" Margin="20" Name="cancelButton" VerticalAlignment="Top" Width="70" Click="Cancel_Click" />






    </Grid>
</Window>
